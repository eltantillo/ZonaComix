{% extends '::WebsiteBase.html.twig' %}

{% block title %}Explorar (Resultados) - Zona Comix{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<h1 class="page-header">Explorar - Resultados</h1>

				{% for comic in comics %}
	                <div class="col-sm-4 text-center">
	                    <a href="{{ path('zona_comix_website_read_chapter', {'comic': comic.title}) }}" class="clean-link">
	                    <h3>{{ comic.title }}</h3>
	                    <p><img src="{{ asset('comics/' ~ comic.id ~ '/cover.jpg') }}" class="img-responsive"></p>
	                    </a>
	                    <p>{{ comic.description }}</p>
	                    <p><!--<a class="btn btn-primary btn-lg" href="{{ path('zona_comix_website_follow_comic', {'comic': comic.title}) }}" role="button">Seguir <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> --><a class="btn btn-primary btn-lg" href="{{ path('zona_comix_website_comic', {'comic': comic.title}) }}" role="button">Más información »</a></p>
	                </div>
	            {% endfor %}

	            <div class="col-xs-12">
					<nav>
						<ul class="pager">
							{% if page > 1 %}
								<li><a href="{{ path('zona_comix_website_explore_results', {
						            'rating' : rating,
						            'genre'  : genre,
						            'style'  : style,
						            'license': license,
						            'page'   : page - 1
						            }) }}">Anterior</a></li>
							{% endif %}
							{% if entries == 10 %}
								<li><a href="{{ path('zona_comix_website_explore_results', {
						            'rating' : rating,
						            'genre'  : genre,
						            'style'  : style,
						            'license': license,
						            'page'   : page + 1
						            }) }}">Siguiente</a></li>
							{% endif %}
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
{% endblock %}