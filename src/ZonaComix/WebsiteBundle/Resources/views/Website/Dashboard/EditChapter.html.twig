{% extends 'ZonaComixWebsiteBundle:Website:Dashboard/Dashboard.html.twig' %}

{% block title %}Escritorio (Editar Capítulo {{ chapter.number }} de {{ chapter.comic.title }}) - ZonaComix{% endblock %}

{% block container %}
	<h2 class="sub-header">Editar Capítulo {{ chapter.number }} de {{ chapter.comic.title }}</h2>
	<div class="form-container">
		<div class="row">
			{% form_theme form 'form/fields.html.twig' %}
			{{ form_start(form, { 'attr': {'class': 'form-horizontal'}}) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}