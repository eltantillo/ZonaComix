{% extends '::WebsiteBase.html.twig' %}

{% block title %}Librería - ZonaComix{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <!--<h1 class="page-header">
                Librería
                <br><small>Aquí se muestran los comics y dibujantes a los que sigues</small>
            </h1>-->

            <div class="col-sm-12">
                <h1 class="page-header">Librería</h1>
                <div class="row placeholders">
                    <div class="col-xs-6 placeholder">
                        <a href="{{ path('zona_comix_website_library_users') }}" class="clean-link"><img src="{{ asset( 'images/guest.png' ) }}" class="img-responsive">
                        <h4>Usuarios</h4>
                        <span class="text-muted">Mostrar los usuarios a los que te encuentras siguiendo.</span></a>
                    </div>
                    <div class="col-xs-6 placeholder">
                        <a href="{{ path('zona_comix_website_library_comics') }}" class="clean-link"><img src="{{ asset( 'images/comic.png' ) }}" class="img-responsive" alt="Generic placeholder thumbnail">
                        <h4>Comics</h4>
                        <span class="text-muted">Mostrar los comics a los que te encuentras siguiendo.</span></a>
                    </div>
                </div>
            </div>
            {% block content %}
                <h2 class="page-header">Lecturas recientes</h2>
                {% for reading in readings %}

                    <div class="col-sm-4 text-center">
                        <a href="{{ path('zona_comix_website_read_chapter', {'comic': reading.comic.title, 'chapter': reading.chapter, 'page': reading.page}) }}" class="clean-link">
                            <h3>{{ reading.comic.title }}</h3>
                            <p><img src="{{ asset('comics/' ~ reading.comic.id ~ '/cover.jpg') }}" class="img-responsive"></p>
                        </a>
                        <p><a class="btn btn-primary btn-lg" href="{{ path('zona_comix_website_stop_reading', {'comic': reading.comic.title}) }}" role="button">Dejar de Leer <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></p>
                    </div>
                {% endfor %}
            {% endblock %}
        </div>
    </div>
{% endblock %}